<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbdafe"
    android:fillViewport="true"
    >

    <LinearLayout
        android:id="@+id/quizzLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        >

        <!-- Titre ou Question -->
        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:text="Question ?" />

        <!-- Bouton Réponse 1 -->
        <Button
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingHorizontal="32dp"
            android:textSize="22sp"
            android:textColor="@color/textContentButton"
            android:backgroundTint="@color/white"
            android:text="Answer1" />

        <!-- Bouton Réponse 2 -->
        <Button
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingHorizontal="32dp"
            android:textSize="22sp"
            android:textColor="@color/textContentButton"
            android:backgroundTint="@color/white"
            android:text="Answer2" />

        <!-- Bouton Réponse 3 -->
        <Button
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingHorizontal="32dp"
            android:textSize="22sp"
            android:textColor="@color/textContentButton"
            android:backgroundTint="@color/white"
            android:text="Answer3" />

        <!-- Bouton Réponse 4 -->
        <Button
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingHorizontal="32dp"
            android:textSize="22sp"
            android:textColor="@color/textContentButton"
            android:backgroundTint="@color/white"
            android:text="Answer4" />

        <!-- Bouton Réponse 5 -->
        <Button
            android:id="@+id/answer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingHorizontal="32dp"
            android:textSize="22sp"
            android:textColor="@color/textContentButton"
            android:backgroundTint="@color/white"
            android:text="Answer5" />

        <!-- Bouton Réponse 6 -->
        <Button
            android:id="@+id/answer6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:paddingHorizontal="32dp"
            android:textSize="22sp"
            android:textColor="@color/textContentButton"
            android:backgroundTint="@color/white"
            android:text="Answer6" />

        <!-- Bouton NEXT/FINISH -->
        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/bleuCiel"
            android:text="NEXT" />

        <!-- Espace pour pousser le compteur vers le bas -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Compteur de questions en bas à droite -->
        <TextView
            android:id="@+id/txtQuestionIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/9"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:layout_margin="8dp"/>

    </LinearLayout>
</ScrollView>
